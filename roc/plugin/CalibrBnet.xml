<?xml version="1.0"?>
<dabc version="1">
 <Context name="Readout">
  <Run>
    <lib value="libDabcMbs.so"/>
    <lib value="libDabcRoc.so"/>
    <logfile value="Readout.log"/>
  </Run>
  <Application class="roc::Readout">
<!-- value must be 100 + number of BNet nodes, 103 is for 3 nodes -->    
    <DoCalibr value="103"/>
    <SyncScaleDown value="5"/>
    <NumRocs value="6"/>
    <RocIp0 value="140.181.73.186"/>
    <BufferSize value="65536"/>
    <NumBuffers value="100"/>
    <TransportWindow value="30"/>
<!-- only base name without wildcard and extension - it will be appended automatically.
    In this example names run001_1*.lmd, run001_2*.lmd and run001_3*.lmd will be configured -->    
    <RawFile value="run001"/>
    <MbsServerKind value=""/>
    <CalibrFile value=""/>
    <MbsFileSizeLimit value="110"/>
  </Application>
  <Module name="RocComb">
     <Ratemeter name="*" debug="true" interval="5" width="5" prec="2"/>
  </Module>
 </Context>
</dabc>
